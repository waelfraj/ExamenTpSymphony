{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .login-form {
            width: 300px;
            margin: 0 auto;
        }
        .login-form .form-label {
            font-weight: bold;
        }
        .login-form .form-control {
            margin-bottom: 10px;
        }
        .item{
            margin-top:10%
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 item">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="card-title" >Connecter</h1>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger"> <span style="font-size:16px"> Nom ou mot de passe incorrect</span></div>
                    {% endif %}
                    <form action="{{ path('login') }}" method="post" class="login-form">
                        <div class="form-group">
                            <label for="username" class="form-label">Nom:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Mot de passe:</label>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">Connecter</button>
                        <a href="{{ path('user_registration') }}" class="btn btn-secondary btn-lg">Cr√©e nouveau compte</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
