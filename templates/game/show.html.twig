{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h2>
<img src={{game.image.getUrl()}} style="height:100px"></img>
titre : {{game.titre}}
type : {{game.type}}
nombre de joueur : {{game.nbrJoueur}}
editeur : {{game.editeur}}</h2>
<h2>Joueurs</h2>
<table>
    <thead>
        <tr>
            <td>Nom</td>
            <td>Email</td>
            <td>Date naissance</td>
            <td>Score</td>
        </tr>
        </thead
    <tbody>
        {% for joueur in listejoueurs %}
            <tr>
            <td>{{ joueur.nom }}</td>
            <td>{{ joueur.email }}</td>
            <td>{{ joueur.bornAt | date('d-m-Y') }}</td>
            <td>{{ joueur.score }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        {% endblock %}
